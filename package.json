{
  "name": "angular-mfe-monorepo",
  "version": "1.0.0",
  "description": "Angular 18 Monorepo with Micro Frontend Architecture",
  "scripts": {
    "start:admin": "nx serve admin-shell --port 4210",
    "start:main": "nx serve main-shell --port 4220",
    "start:crm": "nx serve crm-app --port 4221",
    "start:hrms": "nx serve hrms-app --port 4222",
    "build:admin": "nx build admin-shell --configuration production",
    "build:main": "nx build main-shell --configuration production",
    "build:crm": "nx build crm-app --configuration production",
    "build:hrms": "nx build hrms-app --configuration production",
    "build:all": "npm run build:admin && npm run build:main && npm run build:crm && npm run build:hrms",
    "test": "nx test",
    "lint": "nx lint",
    "clean": "rimraf dist",
    "postinstall": "ngcc --properties es2022 browser module main"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "^16.0.0",
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@nx/angular": "20.1.4",
    "chart.js": "^4.3.0",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.0",
    "primeng": "^16.9.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.0",
    "@angular-devkit/core": "^16.2.0",
    "@angular-devkit/schematics": "^16.2.0",
    "@angular/cli": "^16.2.0",
    "@angular/compiler-cli": "^16.2.0",
    "@nx/angular": "20.1.4",
    "@nx/workspace": "20.1.4",
    "@schematics/angular": "^16.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^18.0.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nx": "20.1.4",
    "rimraf": "^5.0.0",
    "typescript": "~5.1.6"
  }
}